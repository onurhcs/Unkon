@model List<Unkon.Entities.Iletisim>


<section id="contact" class="contact section">

    <!-- Bölüm Başlığı -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p>Bizimle İletişime Geçin</p>
    </div><!-- Bölüm Başlığı Bitiş -->

    <div class="container" data-aos="fade" data-aos-delay="100">    
        <div class="row gy-4">
            
            <div class="col-lg-4">
                @foreach (var item in Model)
                {
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Adres</h3>
                            <p>@item.Adres</p>
                        </div>
                    </div><!-- Bilgi Öğesi Bitiş -->
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>Telefon</h3>
                            <p>@item.Telefon</p>
                        </div>
                    </div><!-- Bilgi Öğesi Bitiş -->

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>Email</h3>
                            <p>@item.Email</p>
                        </div>
                    </div>
                }
                </div>

                <!-- Harita -->
                <div class="col-lg-8">
                    <div data-aos="fade-up" data-aos-delay="500">
                        <iframe style="border:0; width: 100%; height: 384px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3014.205297153329!2d29.1238379!3d40.9331676!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac6bd24fee933%3A0x8298b98dd89fa867!2sFeyzullah%2C%20Ba%C4%9Fdat%20Cad.%20No%3A276%2C%2034843%20Maltepe%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1731324638177!5m2!1str!2str" frameborder="0" allowfullscreen></iframe>

                    </div>
                </div>

            </div>
    </div>
</section><!-- /İletişim Bölümü Bitiş -->
