@model List<Unkon.Entities.About>
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımızda</h2>
        <p>Bizi Tanıyın</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="row gy-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                    <p>
                       @item.Paragraf1
                    </p>
                    <ul>
                        <li><i class="bi bi-check2-circle"></i> <span>@item.Madde1</span></li>
                        <li><i class="bi bi-check2-circle"></i> <span>@item.Madde2</span></li>
                        <li><i class="bi bi-check2-circle"></i> <span>@item.Madde3</span></li>
                    </ul>
                </div>

                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                    <p>
                        @item.Paragraf2
                    </p>
                    <a href="#services" class="read-more"><span>Daha Fazla Bilgi</span><i class="bi bi-arrow-right"></i></a>
                </div>
            }

        </div>
    </div>
</section>
