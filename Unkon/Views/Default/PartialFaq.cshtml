@model List<Unkon.Entities.SSS>

<section id="faq" class="faq section">
    <!-- Bölüm Başlığı -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Sıkça Sorulan Sorular</h2>
        <p>Hizmetlerimizle İlgili Sıkça Sorulan Sorular</p>
    </div><!-- Bölüm Başlığı Bitiş -->

    <div class="container" data-aos="fade-up">
        <div class="row">
            <div class="col-12">
                <div class="custom-accordion" id="accordion-faq">
                    @foreach (var item in Model)
                    {
                        <div class="accordion-item">
                            <h2 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-faq-4">
                                   @item.Soru
                                </button>
                            </h2>
                            <div id="collapse-faq-4" class="collapse" aria-labelledby="headingFour" data-parent="#accordion-faq">
                                <div class="accordion-body">
                                 @item.Cevap
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
