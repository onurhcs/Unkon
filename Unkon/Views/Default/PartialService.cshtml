@model List<Unkon.Entities.Hizmet>

<section id="services" class="services section">

    <!-- Bölüm Başlığı -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hizmetlerimiz</h2>
        <p>Neler Sunuyoruz</p>
    </div><!-- Bölüm Başlığı Bitiş -->

    <div class="container">

        <div class="row gy-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item position-relative">
                        <div class="icon">
                            <i class="@item.IconPath" style="color: @item.Color;"></i>
                        </div>
                        <a href="service-details.html" class="stretched-link">
                            <h3>@item.Baslik</h3>
                        </a>
                        <p>Buhar ve kızgın yağ kazanlarınız için düzenli bakım ve onarım hizmeti sunarak, sistemlerinizin uzun ömürlü ve verimli çalışmasını sağlıyoruz.</p>
                    </div>
                </div><!-- Hizmet Ögesi Bitiş -->
            }

        </div>

    </div>

</section>
